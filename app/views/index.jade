extends layout

block head
	link(rel='stylesheet' href='https://cdn.rawgit.com/novus/nvd3/v1.8.1/build/nv.d3.css')

block defer
	script(src='https://d3js.org/d3.v3.min.js')
	script(src='https://cdnjs.cloudflare.com/ajax/libs/nvd3/1.8.4/nv.d3.min.js')
	script(src='https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.12.0/moment.min.js')
	script(src='/js/index.js')

block content
	.row
		h2 Yearly chart
		.col-md-6
			h5 registrations
			svg#yearly-registrations

		.col-md-6
			h5 participants
			svg#yearly-participants

	.row
		h2 Daily chart

		.col-md-12
			h5 participants
			svg#daily-participants

		.col-md-12
			h5 participants present
			svg#daily-participants-present

		.col-md-12
			h5 participants absent
			svg#daily-participants-absent
