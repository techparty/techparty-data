extends ../layouts/default

block content
	.container
		.row
			.col-md-4.col-md-offset-4
				.login-panel.panel.panel-default
					.panel-heading
						h3.panel-title Please Sign In
					.panel-body
						form(role='form' method='post' action='/auth/sign')
							.form-group.required
								input(type="email" class="form-control" name="username" placeholder="Email" focus required)

							.form-group.required
								input(type="password" class="form-control" name="password" placeholder="Password" required)

							button(class='btn btn-lg btn-success btn-block' type='submit') Login