extends ../layout

block defer
	script(src='/js/signin.js')

block content
	header.page-header
		h2 Please Sign In

	section.col-md-4.col-md-offset-4
		form(role='form' method='post' action='/auth/signin')
			.form-group
				label(for="username") Email
				input.form-control(type="email" id="username" name="username" focus required)

			.form-group
				label(for="password") Password
				input.form-control(type="password" id="password" name="password" required)

			button.btn.btn-primary(type='submit') Log in
			a#open-reset(href="#") Reset password

		form#reset(method="get" action="/auth/reset" style="display: none;")
			.form-group
				label(for="email") Email
				input.form-control(type="email" id="email" name="email" required)
