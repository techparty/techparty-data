extends ../layout

block content

	header.page-header
		h3
			|Speakers
			|&nbsp
			small
				a(href="/speaker/new") New


	section
		table.table.table-striped
			thead
				tr
					th Name
					th Email
					th Talk
					th Date
					th Actions
			tbody
				each speaker in speakers
					tr
						td #{speaker.name}
						td #{speaker.email}
						td #{speaker.talk}
						td #{moment(speaker.date).format('DD/MM/YYYY')}
						td
							- var uri = '/speaker/' + speaker.id
							form(method='POST' action="#{uri}?_method=DELETE" onsubmit="return main.confirmDelete();")
								a(href="#{uri}")
									span.glyphicon.glyphicon-edit(aria-hidden="true")
								button.btn-link(type="submit")
									span.glyphicon.glyphicon-trash(aria-hidden="true")