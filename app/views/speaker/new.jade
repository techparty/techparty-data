extends ../layout

block content

	header.page-header
		h3 Speakers

	section
		form(role='form' method='post' action='/speaker')
			.form-group
				label(for="name") Name
				input.form-control(type="text" id="name" name="name" required)

			.form-group
				label(for="email") Email
				input.form-control(type="email" id="email" name="email" required)

			.form-group
				label(for="talk") Talk
				input.form-control(type="text" id="talk" name="talk" required)

			.form-group
				label(for="date") Date
				input.form-control(type="text" id="date" name="date" required placeholder="yyyy/mm/dd")

			.form-group
				label(for="minutes") Minutes
				input.form-control(type="number" id="minutes" name="minutes" placeholder="50")

			button.btn.btn-primary(type="submit") Create